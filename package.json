{
    "name": "warpath",
    "version": "0.1.0",
    "private": true,
    "description": "Warpath - 4X-lite por turnos en mapa territorial",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "npm run build --workspaces",
        "test": "npm run test --workspaces --if-present",
        "test:coverage": "npm run test:coverage --workspace=@warpath/rules-engine",
        "clean": "npm run clean --workspaces --if-present"
    },
    "devDependencies": {
        "@swc/core": "^1.15.1",
        "@swc/jest": "^0.2.39",
        "jest": "^29.7.0",
        "ts-jest": "^29.4.5",
        "typescript": "^5.3.3",
        "vite": "^5.4.21"
    }
}